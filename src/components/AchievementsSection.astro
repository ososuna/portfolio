---
import AchievementCard from '@components/AchievementCard.astro';
import SectionContainer from '@components/SectionContainer.astro';

const achievements = [
  {
    title: 'Huawei Seeds for the Future 2020',
    description: 'Selected as one of the top 40 students in Mexico to participate in a minimum learning of 13 hours, covering exclusive courses to learn about Huawei and the lastest technologies (5G, AI, cloud computing and HMS), to discover the technology ecosystem in China and to learn from the best experts in the industry.',
    image: '/src/assets/img/achievements/seeds-for-the-future.jpg',
    link: 'https://www.huawei.com/minisite/seeds-for-the-future/index.html'
  },
  {
    title: 'Software Engineering Bachelor\'s Degree',
    description: 'Bachelor\'s Degree in Software Engineering from Universidad Anahuac Queretaro. My academic journey has equipped me with a solid foundation in software engineering principles, programming languages, and emerging technologies. Engaging in collaborative projects has honed my expertise in web development, database design, and software architecture.',
    image: '/src/assets/img/achievements/anahuac-queretaro.jpg',
  },
];
---

<SectionContainer id="achievements" class="py-16">
  <h2 class="text-zinc-950 dark:text-white xss:text-3xl text-2xl font-bold text-center mb-10">Achievements</h2>
  <div class="flex md:flex-row flex-col justify-center md:items-start items-center lg:space-x-8 md:space-x-4">
    {
      achievements.map(({title, description, image, link}) => (
        <AchievementCard title={title} description={description} image={image} link={link} />
      ))
    }
  </div>
</SectionContainer>
