---
import ThemeSelector from '@components/ThemeSelector.astro';
import LanguageSelector from '@components/LanguageSelector.astro';
import LogoIcon from '@icons/LogoIcon.astro';
import { useTranslations } from '@data/i18n/ui';
import type { Lang } from '@data/i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const menuOptions = [
  {
    name: t('nav', 'experience'),
    label: t('nav', 'experience').toLowerCase(),
    url: lang === 'es' ? '/es/#experience' : '/#experience',
  },
  {
    name: t('nav', 'projects'),
    label: t('nav', 'projects').toLowerCase(),
    url: lang === 'es' ? '/es/#projects' : '/#projects',
  },
  {
    name: t('nav', 'achievements'),
    label: t('nav', 'achievements').toLowerCase(),
    url: lang === 'es' ? '/es/#achievements' : '/#achievements',
  },
  {
    name: t('nav', 'about'),
    label: t('nav', 'about').toLowerCase(),
    url: lang === 'es' ? '/es/#about-me' : '/#about-me',
  },
];
---

<header
  class="w-full fixed h-14 flex items-center xs:justify-between justify-center xs:px-6 shadow-sm backdrop-blur z-50"
>
  <a href={lang === 'es' ? '/es/#' : '/#'} aria-label={t('nav', 'home')} class="xss:hidden xs:block block">
    <LogoIcon />
  </a>
  <nav class="flex items-center xs:space-x-4 space-x-3">
    {
      menuOptions.map((option) => (
        <a
          class="text-sm text-zinc-500 dark:text-zinc-400
            hover:text-zinc-600 dark:hover:text-zinc-300 transition-all xss:block hidden"
          aria-label={option.label}
          href={option.url}
        >
          {option.name}
        </a>
      ))
    }
    <LanguageSelector lang={lang} />
    <ThemeSelector lang={lang} />
  </nav>
</header>
